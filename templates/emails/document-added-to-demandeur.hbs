{{> header}}
<table role="presentation" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding:24px;font:400 14px/1.8 -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial;color:#111827">
      <h3 style="margin:0 0 12px 0">Nouveau document ajouté</h3>
      <p>Bonjour {{escapeHtml demandeurName}},</p>
      <p> {{escapeHtml orgName}} a ajouté un document à votre demande.</p>
      <ul style="padding-left:18px;margin:0">
        <li><strong>Organisme :</strong> {{escapeHtml orgName}}</li>
        {{#if orgEmail}}<li><strong>Email organisme :</strong> {{escapeHtml orgEmail}}</li>{{/if}}
        {{#if orgPhone}}<li><strong>Téléphone organisme :</strong> {{escapeHtml orgPhone}}</li>{{/if}}
        {{#if codeDocument}}<li><strong>Code demande :</strong> {{escapeHtml codeDocument}}</li>{{/if}}
        
        <li><strong>Ajouté le :</strong> {{escapeHtml dateAjout}}</li>
      </ul>

      {{#if viewUrl}}
      <p style="margin-top:16px">
        <a href="{{toAbsoluteUrl viewUrl}}" style="display:inline-block;padding:10px 16px;background:#111827;color:#fff;border-radius:6px;text-decoration:none">
          Voir la demande
        </a>
      </p>
      {{/if}}
    </td>
  </tr>
</table>
{{> footer}}
