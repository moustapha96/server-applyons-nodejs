{{> header}}
<table role="presentation" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding:24px;font:14px/1.7 -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial;color:#111827">
      <p>Bonjour {{orgName}},</p>

      <p>
        {{demandeurName}} souhaite que vous ajoutiez des documents pour sa demande destinée à
        <strong>{{targetOrgName}}</strong>.
      </p>

      <p style="margin:12px 0 0 0">
        <strong>Code de la demande :</strong> {{demandeCode}}
      </p>

      {{#if infoUrl}}
        <p style="margin-top:16px">
          <a
            href="{{infoUrl}}"
            style="display:inline-block;padding:10px 16px;border-radius:8px;text-decoration:none;background:#111827;color:#ffffff;font-weight:600"
          >
            Plus d'informations
          </a>
        </p>
        <p style="margin-top:8px;color:#6b7280;font-size:12px">
          Si le bouton ne marche pas, copiez/collez ce lien :<br/>
          <a href="{{infoUrl}}" style="color:#111827">{{infoUrl}}</a>
        </p>
      {{/if}}
    </td>
  </tr>
</table>
{{> footer}}
