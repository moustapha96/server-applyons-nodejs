{{> header}}
<table role="presentation" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding:24px;font:400 14px/1.8 -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial;color:#111827">
        <div class="content">
        <div class="message">
            {{#if firstName}}
                <p>Bonjour {{firstName}},</p>
            {{else}}
                <p>Bonjour,</p>
            {{/if}}

            <p>{{{message}}}</p>
        </div>

        {{#if attachments}}
        <div class="attachments">
            <h3>Pi√®ces jointes :</h3>
            <p>Vous trouverez ci-joint les documents suivants :</p>
            <ul class="attachment-list">
                {{#each attachments}}
                <li>{{this.filename}}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
    </td>
  </tr>
</table>
{{> footer}}
