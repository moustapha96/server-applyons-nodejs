{{> header}}
<table role="presentation" width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding:24px;font:400 14px/1.8 -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial;color:#111827">
      <h3 style="margin:0 0 12px 0">Invitation à authentifier une demande</h3>
      <p>Bonjour {{escapeHtml nameInstitut}},</p>
      <p>Vous êtes invité à authentifier les documents de <strong>{{escapeHtml demandeurName}}</strong> ({{escapeHtml demandeurEmail}}).</p>
      {{#if institutDemandeur}}
        <p><strong>Institut demandeur :</strong> {{escapeHtml institutDemandeur.name}} — {{escapeHtml institutDemandeur.phone}} — {{escapeHtml institutDemandeur.adresse}}</p>
      {{/if}}
      <p style="margin:20px 0">
        <a href="{{invitationUrl}}" style="background:#2563eb;color:#fff;padding:10px 16px;border-radius:8px;text-decoration:none" target="_blank">Ouvrir l’invitation</a>
      </p>
      <p style="word-break:break-all">Lien direct : <a href="{{invitationUrl}}" target="_blank" style="color:#2563eb">{{invitationUrl}}</a></p>
    </td>
  </tr>
</table>
{{> footer}}
